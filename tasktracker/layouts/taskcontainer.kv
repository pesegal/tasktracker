<TaskList>:
    pos_hint: {'top': 1}
    size_hint_y: None
    cols: 1
    padding: 6, 3, 3, 0
    spacing: 3

<ListLabels>:
    font_size: 12
    size_hint_y: None
    size_hint_x: None
    size: 80, 20
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    color: self.theme.text
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [2,2,2,2]
            pos: self.x, self.y
            size: self.width, self.height


<TaskScreen>:
    title: 'Task Screen'
    size_hint: None, None
    size: app.root.width/1.1, app.root.height/1.1
    separator_height: 4
    auto_dismiss: False

    background_color: self.bg_shade_color
    background: self.transparent_texture
    title_color: self.label_color


    canvas.before:
        Color:
            rgba: [0, 0, 0, .9]
        BorderImage:
            source: root.shadow_texture
            border: [3, 3, 3, 3]
            pos: self.x - 4, self.y - 4
            size: self.width + 8, self.height + 8
        Color:
            rgba: root.bg_popup_color
        BorderImage:
            source: root.popup_texture
            border: [3, 3, 3, 3]
            pos: root.pos
            size: root.size


<TaskCreationScreen>:
    id: task_screen
    project_selection_section: project_selection_section
    title: 'Add New Task'

    #Properties
    task_name: task_title
    notes: task_notes

    GridLayout:
        cols: 1
        padding: 3

        TaskTitle:
            id: task_title

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            spacing: 4
            padding: 0, 3
            TaskListSelectionButton:
                text: 'Today'
                state: 'down'
                on_press: root.list_selection = 0
            TaskListSelectionButton:
                text: 'Tomorrow'
                on_press: root.list_selection = 1
            TaskListSelectionButton:
                text: 'Future'
                on_press: root.list_selection = 2

        ProjectSelectionSection:
            id: project_selection_section
            task_screen: task_screen

        ThemedTextInput:
            id: task_notes
            hint_text: '//Notes'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            spacing: 4
            padding: 0, 3
            ThemedButton:
                text: 'Cancel'
                on_press: root.dismiss()
            ThemedButton:
                text: 'Create'
                on_press: root.create_task()

<TaskEditScreen>:
    id: task_screen
    project_selection_section: project_selection_section
    title: 'Edit Task'

    #Properties
    task_name: task_title
    notes: task_notes

    GridLayout:
        cols: 1
        padding: 4

        TaskTitle:
            id: task_title

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 40
            padding: 0, 3
            spacing: 4

            TaskListSelectionButton:
                id: today_button
                text: 'Today'
                on_press: root.list_selection = 0
            TaskListSelectionButton:
                id: tomorrow_button
                text: 'Tomorrow'
                on_press: root.list_selection = 1
            TaskListSelectionButton:
                id: future_button
                text: 'Future'
                on_press: root.list_selection = 2
            TaskListSelectionButton:
                id: archive_button
                text: 'Archive'
                on_press: root.list_selection = 3

        ProjectSelectionSection:
            id: project_selection_section
            task_screen: task_screen


        ThemedTextInput:
            id: task_notes
            hint_text: '//Notes'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: 0, 3
            spacing: 4

            ThemedButton:
                text: 'Cancel'
                on_press: root.dismiss()
            ThemedButton:
                text: 'Update'
                on_press: root.update_task()


<ThemedTextInput>:



<ThemedButton>:
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3



<TaskListSelectionButton>:
    size_hint_x: .33
    height: 40
    group:'task_list_selection'
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3

<TaskTitle@ThemedTextInput>:
    multiline: False
    size_hint_y: None
    height: 30
    hint_text: '//Task Title'
    # Do styling here

<ProjectSelectionSection>:
    # Layout information for the project selection section!
    orientation: 'horizontal'
    size_hint_y: None
    height: 31
    padding: 0, 2, 0, 2
    ProjectSelector:
        id: selector
        size_hint_x: .9
        size_hint_y: None
        height: 30
    Button:
        id: new_project
        text: '+'
        size_hint_x: .1
        size_hint_y: None
        height: 30
        on_press: root.open_project_screen()

