<TaskScrollContainer>:
    size_hint: 1, 1
    scroll_timeout: 55 # Use this to adjust how long it takes for the touch event to be sent to the children
    canvas.before:
        Color:
            rgba: root.scroll_bg_color
        Rectangle:
            size: root.width - 4, root.height
            pos: root.x + 1, root.y

<ListNameLabelDisplay>:
