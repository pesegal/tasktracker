<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_path: root.set_popup_title(self.path)


        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel.dismiss_popup()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection, root.callback)


<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserListView:
            id: filechooser
            path: root.start_path
            on_selection: text_input.text = self.selection and self.selection[0] or ''
            on_path: root.set_popup_title(self.path)

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release:
                    # TODO: fix bug with cancel screen.
                    root.cancel.dismiss_popup()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text, root.callback)