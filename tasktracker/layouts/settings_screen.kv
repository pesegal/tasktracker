<SettingsScreen>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            id: setting_labels
            orientation: 'vertical'
            padding: 1

            ThemeSettingsContainer: # Dynamically populated in settingsscreen.py

            SettingsContainer:
                SettingsLabel:
                    text: 'Notification Sound Selection:'
                SettingsSoundSelector:

            SettingsContainer:
                SettingsLabel:
                    text: 'Notification Sound Volume:'
                SettingsSoundVolumeSlider:

            BackupSettingsContainer:
                id: database_backup_controller
                SettingsLabel:
                    text: 'Database Backup Location:'
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        text: "Current Backup Location"
                    Label:
                        id: current_backup_path
                        text: database_backup_controller.selected_path


                SettingsButton:
                    text: 'Backup'
                    size_hint_x: None
                    width: 140
                    on_press: database_backup_controller._open_selection_backup()

            SettingsLabel:
                text: 'Load / Reset Database:'

            SettingsLabel:
                text: 'Extract Data to flat file (.csv):'


<SettingsLabel>:
    width: 140
    padding_x: 4
    text_size: self.size
    size_hint_x: None
    halign: 'right'
    valign: 'middle'
    font_size: '16sp'

<SettingsContainer>:
    padding: 0, 2, 0, 0
    orientation: 'horizontal'

<SettingsSoundSelector>:

<SettingsSoundVolumeSlider>:

<SettingsButton>:



