<SettingsScreen>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            id: setting_labels
            orientation: 'vertical'

            SettingsContainer:
                SettingsLabel:
                    text: 'Theme Selection'

            SettingsLabel:
                text: 'Notification Sound Selection'

            SettingsLabel:
                text: 'Notification Sound Volume'

            SettingsLabel:
                text: 'Database Backup Location'

            SettingsLabel:
                text: 'Load / Reset Database'

            SettingsLabel:
                text: 'Extract Data to flat file (.csv)'


<SettingsLabel@Label>:
    text_size: self.size
    halign: 'right'
    valign: 'middle'
    font_size: '18sp'

<SettingsContainer@BoxLayout>:
    orientation: 'horizontal'

