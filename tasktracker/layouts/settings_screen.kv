<SettingsScreen>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            id: setting_labels
            orientation: 'vertical'
            padding: 1

            ThemeSettingsContainer: # Dynamically populated in settingsscreen.py

            SettingsContainer:
                SettingsLabel:
                    text: 'Notification Sound Selection:'
                SettingsSoundSelector:

            SettingsContainer:
                SettingsLabel:
                    text: 'Notification Sound Volume:'
                SettingsSoundVolumeSlider:

            BackupSettingsContainer:
                id: database_backup_controller
                SettingsLabel:
                    text: 'Database Backup Location:'
                BoxLayout:
                    orientation: "vertical"
                    SettingsLabel:
                        text: "Current Backup Location"
                        halign: 'center'
                        size_hint_x: 1

                    SettingsLabel:
                        id: current_backup_path
                        text: database_backup_controller.selected_path
                        size_hint_x: 1
                        halign: 'center'

                SettingsButton:
                    text: 'Backup'
                    size_hint_x: None
                    width: 140
                    on_press: database_backup_controller.open_selection_backup()

            LoadResetDatabaseContainer:
                id: database_load_reset_controller
                SettingsLabel:
                    text: 'Load / Reset Database:'

                SettingsButton:
                    text: 'Load Database File'
                    on_release: database_load_reset_controller.open_load_window()

                SettingsButton:
                    text: 'Clear Data Test'
                    on_release: database_load_reset_controller.app_control.clear_app_data()

                SettingsButton:
                    text: 'Load Data Test'
                    on_release: database_load_reset_controller.app_control.load_app_data()

            SettingsLabel:
                text: 'Extract Data to flat file (.csv):'


<ConfirmationNotification>:
    size_hint: 1, 1
    BoxLayout:
        orientation: 'vertical'
        SettingsLabel:
            id: message
            size_hint_x: 1
            halign: 'center'
            text: root.notification_message
        BoxLayout:
            orientation: 'horizontal'
            SettingsButton:
                id: confirmation_ok
                text: 'Ok'
                on_touch_down: root.controller._backup_database(root.file_path)
            SettingsButton:
                id: confirmation_cancel
                text: 'Cancel'
                on_touch_down:
                    root.popup.dismiss()



<ErrorNotification>:
    size_hint: 1, 1
    BoxLayout:
        orientation: 'vertical'
        SettingsLabel:
            id: message
            size_hint_x: 1
            halign: 'center'
            text: root.error_message
        BoxLayout:
            orientation: 'horizontal'
            SettingsButton:
                id: error_ok_button
                text: 'Ok'
                on_touch_down: root.popup.dismiss()


<SettingsLabel>:
    width: 140
    padding_x: 4
    text_size: self.size
    size_hint_x: None
    halign: 'right'
    valign: 'middle'
    font_size: '16sp'

<SettingsContainer>:
    padding: 0, 2, 0, 0
    orientation: 'horizontal'

<SettingsSoundSelector>:

<SettingsSoundVolumeSlider>:

<SettingsButton>:



