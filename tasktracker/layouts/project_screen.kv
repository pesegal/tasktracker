<ProjectPopup>:
    id: project_popup
    title: 'Projects'
    size_hint: None, None
    size: app.root.width/1.1, app.root.height/1.1
    separator_height: 4

    background_color: self.bg_shade_color
    background: self.transparent_texture
    title_color: self.label_color

    canvas.before:
        Color:
            rgba: [0, 0, 0, .9]
        BorderImage:
            source: root.shadow_texture
            border: [3, 3, 3, 3]
            pos: self.x - 4, self.y - 4
            size: self.width + 8, self.height + 8
        Color:
            rgba: root.bg_popup_color
        BorderImage:
            source: root.popup_texture
            border: [3, 3, 3, 3]
            pos: root.pos
            size: root.size

    BoxLayout:
        orientation: 'vertical'
        pos_hint_y: 1
        padding: 0, 3, 0, 0
        spacing: 4

        ProjectPopupSelector:
            id: popup_selector
            popup: root
            size_hint_y: None
            height: 30

        ThemedTextInput:
            id: project_title
            size_hint_y: None
            height: 30
            hint_text: '// Project Title'

        ColorSelectionWindow:
            id: color_selector
            popup: root
            size_hint_x: 1
            size_hint_y: 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y:  None
            height: 50
            pos_hint_y: 0
            spacing: 4

            ThemedButton:
                id: cancel_button
                text: 'Cancel'
                on_press: root.dismiss()

            ThemedButton:
                id: create_update_button
                text: 'New' # Look into auto changing this text.
                on_press: root.create_project()

<ColorSelectionButton>:
    background_normal: self.button_texture
    background_down: self.button_texture
    border: [3, 3, 3, 3]
