<ProjectPopup>:
    id: project_popup
    title: 'Projects'
    size_hint: None, None
    size: app.root.width/1.1, app.root.height/1.1

    BoxLayout:
        orientation: 'vertical'
        pos_hint_y: 1
        padding: 0, 3, 0, 0

        ProjectPopupSelector:
            id: popup_selector
            popup: root
            size_hint_y: None
            height: 30

        TextInput:
            id: project_title
            size_hint_y: None
            height: 30
            hint_text: '//Project Title'

        ColorSelectionWindow:
            id: color_selector
            popup: root
            size_hint_x: 1
            size_hint_y: 1
            padding: 2, 5

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y:  None
            height: 50
            pos_hint_y: 0

            Button:
                id: cancel_button
                text: 'Cancel'
                on_press: root.dismiss()

            Button:
                id: create_update_button
                text: 'New' # Look into auto changing this text.
                on_press: root.create_project()



