<MenuBar>:
    id: menubar
    orientation: 'horizontal'
    size_hint_y: None
    padding: 0
    height: 30

    canvas.before:
        Color:
            rgba: self.menu_bar_bg_color
        Rectangle:
            size: root.width, root.height
            pos: root.x, root.y



    MenuButton:
        id: multi_use_button
        menu: menubar
        drop_type: 'task_edit'
        text: "New Task"
        on_press: root.task_multi_use_press(*args)
    MenuButton:
        id: switch_screen_1
        text: 'Timer'
        drop_type: 'timer'
        on_press: root.switch_screens('timer', 'right')
    MenuButton:
        id: switch_screen_2
        text: 'Stats'
        drop_type: 'status'
        on_press: root.switch_screens('stats', 'up')



