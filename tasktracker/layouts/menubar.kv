<MenuBar>:
    id: menubar
    orientation: 'horizontal'
    size_hint_y: None
    padding: 0
    height: 30

    canvas.before:
        Color:
            rgba: self.menu_bar_bg_color
        Rectangle:
            size: root.width, root.height
            pos: root.x, root.y

    MenuButton:
        id: task_button
        menu: menubar
        drop_type: 'task_edit'
        text: "NEW TASK"
        on_press: root.task_multi_use_press(*args)
    MenuButton:
        id: timer_button
        text: 'TIMER'
        drop_type: 'timer'
        on_press: root.switch_screens('timer', 'right')
    MenuButton:
        id: stats_button
        text: 'STATS'
        drop_type: 'status'
        on_press: root.switch_screens('stats', 'up')
    MenuButton:
        id: settings_button
        text: 'SETTINGS'
        drop_type: 'settings'
        on_press: root.switch_screens('settings', 'right')

<MenuButton>:
    bold: True
    font_kerning: True
    color: self.text_color
    border: [2, 2, 2, 2]
    background_color: [0,0,0,0]
    background_down: ''
