<MenuBar>:
    id: menubar
    orientation: 'horizontal'
    size_hint_y: None
    padding: 0
    height: 30

    MultiUseButton:
        id: multi_use_button
        menu: menubar
        text: "New Task"
        on_press: root.task_multi_use_press(*args)
    SwitchScreenButton:
        id: switch_screen_1
        text: 'Timer'
        drop_type: 'timer'
        on_press: root.switch_screens('timer', 'right')
    SwitchScreenButton:
        id: switch_screen_2
        text: 'Stats'
        drop_type: 'status'
        on_press: root.switch_screens('stats', 'up')
