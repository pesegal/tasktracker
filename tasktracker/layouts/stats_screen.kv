<StatsScreen>:
    BoxLayout:
        orientation: "vertical"
        TimelineContainer:
            id: timeline_display
            orientation: "vertical"

            BoxLayout:
                id: time_controls
                orientation: 'horizontal'
                size_hint_y: None
                height: 50

                DateTimeLabel:
                    id: label_time_start
                    display_time: timeline_display.display_time_start
                TimelineSlider:
                    time_line_container: timeline_display

                DateTimeLabel:
                    id: label_time_end
                    display_time: timeline_display.display_time_end


<DateTimeLabel>:
    size_hint: None, 1

    height: 50
    markup: True


