<StatsRecordLine>:
    size_hint_x: 1
    size_hint_y: None
    height: 40
    orientation: "horizontal"
    ProjectTaskDisplay:
        id: project_task_display
        text: "Project Display"
        size_hint_x: .34

    StatsButton:
        id: work_time
        text: "Work Time"
        size_hint_x: .22

    StatsButton:
