<StatsScreen>:

<StandardStatsScreen>:
    BoxLayout:
        orientation: 'vertical'
        TaskProjectStatsSummaryView:
            id: stats_summary_view
            display_time_start: time_container.display_time_start
            display_time_end: time_container.display_time_end
            size_hint_y: .45
        TimelineContainer:
            id: time_container
            size_hint_y: .55


<TaskProjectStatsSummaryView>:
    orientation: 'vertical'
    record_detail_grid_view: detail_grid_view
    record_summary_line: stats_summary_line

    # TODO: Replace scaffold with themed widgets.

    BoxLayout:
        id: summary_labels
        orientation: "horizontal"
        size_hint_y: .85
        spacing: 3
        BoxLayout:
            id: task_project_switcher
            size_hint_x: .2
            orientation: "vertical"
            spacing: 2
            padding: 2, 0, 0, 0
            Label:
                id: view_label
                text: "Summary"
                size_hint_y: .2
            StatsButton: # TODO turn these into toggle buttons
                text: "Time by Project"
                size_hint_y: .2
                on_release: root.set_filter_selection('project_id')
            StatsButton:
                text: "Time by Task"
                size_hint_y: .2
                on_release: root.set_filter_selection('task_id')
            StatsButton:
                text: "% By Project"
                size_hint_y: .2
            StatsButton:
                text:  "% By Task"
                size_hint_y: .2

        BoxLayout:
            id: detail_container
            orientation: 'vertical'
            size_hint_x: .8
            BoxLayout:
                spacing: 2
                padding: 2
                id: detail_header
                orientation: "horizontal"
                size_hint_y: .2
                LeftBevStatsButton:
                    id: task_project_toggle_button
                    text: "Task/Project"
                    size_hint_x: .34
                    on_release: root.toggle_filter_selection(self) # TODO switch this to filter by name / project
                NoBevStatsButton:
                    id: working_time_sort_button
                    text: "Working Time"
                    size_hint_x: .22
                NoBevStatsButton:
                    id: break_time_sort_button
                    text: "Break Time"
                    size_hint_x: .22
                RightBevStatsButton:
                    id: paused_time_sort_button
                    text: "Paused Time"
                    size_hint_x: .22

            ScrollView:

                id: detail_scroll_view
                size_hint_y: .8

                RecordDetailGridView:
                    id: detail_grid_view
                    cols: 1
                    spacing: 2
                    padding: 2
                    size_hint_y: None


    BoxLayout:
        id: total_line
        orientation: "horizontal"
        size_hint_y: .15
        padding: 2
        spacing: 3
        Label:
            text: "Total"
            size_hint_x: .2
            # TODO: Add padding: 2, 0, 0, 0

        StatsSummaryLine:
            id: stats_summary_line
            size_hint_x: .8


<StatsButton>:
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3


<ProjectTaskDisplay>:
    size_hint_x: .34
    border: [2, 2, 2, 2]
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas:
        Color:
            rgba: root.project_shadow_color
        BorderImage:
            source: root.project_indicator
            border: [3, 3, 3, 3]
            pos: self.x + 1, self.y - 1
            size: self.width*.07 - 4, self.height + 2

        Color:
            rgba: root.project_color
        BorderImage:
            source: root.project_indicator
            border: [2, 2, 2, 2]
            pos: self.x - 1, self.y
            size: self.width*.07 - 4, self.height


<StatsRecordLine>:
    size_hint_x: 1
    size_hint_y: None
    height: 40
    orientation: "horizontal"
    spacing: 2
    display_object: project_task_display

    ProjectTaskDisplay:
        id: project_task_display
        size_hint_x: .34
        size_hint_y: None
        height: 40

    NoBevStatsButton:
        id: work_time
        text: root.work_time_display
        size_hint_x: .22

    NoBevStatsButton:
        id: break_time
        text: root.break_time_display
        size_hint_x: .22

    RightBevStatsButton:
        id: pause_time
        text: root.pause_time_display
        size_hint_x: .22


<StatsSummaryLine>:
    orientation: "horizontal"
    spacing: 2

    LeftBevStatsButton:
        id: task_project_counter
        text: root.task_project_display
        size_hint_x: .34

    NoBevStatsButton:
        id: work_time_total
        text: root.work_time_display
        size_hint_x: .22

    NoBevStatsButton:
        id: break_time_total
        text: root.break_time_display
        size_hint_x: .22

    RightBevStatsButton:
        id: pause_time_total
        text: root.pause_time_display
        size_hint_x: .22


<TimelineContainer>:
    id: timeline_display
    orientation: "vertical"
    label_start: label_time_start
    label_end: label_time_end
    timeline_zoom_slider: zoom_slider

    BoxLayout:
        id: time_controls
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        DateTimeLabel:
            id: label_time_start
            name: "label_time_start"
            display_time: timeline_display.display_time_start
            time_line_container: timeline_display

        TimelineSlider:
            id: zoom_slider
            time_line_container: timeline_display

        DateTimeLabel:
            id: label_time_end
            name: "label_time_end"
            display_time: timeline_display.display_time_end
            time_line_container: timeline_display


<DateTimeLabel>:
    size_hint: None, 1
    height: 50
    markup: True



