<StatsScreen>:

<StandardStatsScreen>:
    BoxLayout:
        orientation: 'vertical'
        TaskProjectStatsSummaryView:
            id: stats_summary_view
            display_time_start: time_container.display_time_start
            display_time_end: time_container.display_time_end
            size_hint_y: .45
        TimelineContainer:
            id: time_container
            size_hint_y: .55


<TaskProjectStatsSummaryView>:
    orientation: 'vertical'
    record_detail_grid_view: detail_grid_view

    # TODO: Replace scaffold with themed widgets.

    BoxLayout:
        id: summary_labels
        orientation: "horizontal"
        size_hint_y: .85
        BoxLayout:
            id: task_project_switcher
            size_hint_x: .2
            orientation: "vertical"
            Label:
                id: view_label
                text: "Summary"
                size_hint_y: .2
            Button:
                text: "Time by Project"
                size_hint_y: .2
            Button:
                text: "Time by Task"
                size_hint_y: .2
            Button:
                text: "% By Project"
                size_hint_y: .2
            Button:
                text:  "% By Task"
                size_hint_y: .2

        BoxLayout:
            id: detail_container
            orientation: 'vertical'
            size_hint_x: .8
            BoxLayout:
                id: detail_header
                orientation: "horizontal"
                size_hint_y: .2
                Button:
                    text: "Task/Project"
                    size_hint_x: .34
                    on_release: detail_grid_view._add_record()
                Button:
                    text: "Working Time"
                    size_hint_x: .22
                Button:
                    text: "Break Time"
                    size_hint_x: .22
                Button:
                    text: "Paused Time"
                    size_hint_x: .22

            ScrollView:
                id: detail_scroll_view
                size_hint_y: .8

                RecordDetailGridView:
                    id: detail_grid_view
                    cols: 1
                    spacing: 2
                    size_hint_y: None


    BoxLayout:
        id: total_line
        orientation: "horizontal"
        size_hint_y: .15
        Label:
            text: "Total"
            size_hint_x: .2

        Button:
            text: "Totals Placeholder"
            size_hint_x: .8


<StatsButton>:
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3


<ProjectTaskDisplay>:
    size_hint_x: .34
    border: [2, 2, 2, 2]
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas:
        Color:
            rgba: root.project_shadow_color
        BorderImage:
            source: root.project_indicator
            border: [3, 3, 3, 3]
            pos: self.x + 1, self.y - 1
            size: self.width*.07 - 4, self.height + 2

        Color:
            rgba: root.project_color
        BorderImage:
            source: root.project_indicator
            border: [2, 2, 2, 2]
            pos: self.x - 1, self.y
            size: self.width*.07 - 4, self.height



<StatsRecordLine>:
    size_hint_x: 1
    size_hint_y: None
    height: 40
    orientation: "horizontal"
