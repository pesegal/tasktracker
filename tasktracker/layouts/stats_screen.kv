<StatsScreen>:

<StandardStatsScreen>:
    BoxLayout:
        orientation: 'vertical'
        TaskProjectStatsSummaryView:
            id: stats_summary_view
            display_time_start: time_container.display_time_start
            display_time_end: time_container.display_time_end
            size_hint_y: .45
        TimelineContainer:
            id: time_container
            size_hint_y: .55


<TaskProjectStatsSummaryView>:
    orientation: 'vertical'
    record_detail_grid_view: detail_grid_view

    # TODO: Replace scaffold with themed widgets.

    BoxLayout:
        id: summary_labels
        orientation: "horizontal"
        size_hint_y: .85
        BoxLayout:
            id: task_project_switcher
            size_hint_x: .2
            orientation: "vertical"
            Label:
                id: view_label
                text: "Summary"
                size_hint_y: .2
            Button:
                text: "Time by Project"
                size_hint_y: .2
            Button:
                text: "Time by Task"
                size_hint_y: .2
            Button:
                text: "% By Project"
                size_hint_y: .2
            Button:
                text:  "% By Task"
                size_hint_y: .2

        BoxLayout:
            id: detail_container
            orientation: 'vertical'
            size_hint_x: .8
            BoxLayout:
                id: detail_header
                orientation: "horizontal"
                size_hint_y: .2
                Button:
                    text: "Task/Project"
                    size_hint_x: .34
                Button:
                    text: "Working Time"
                    size_hint_x: .22
                Button:
                    text: "Break Time"
                    size_hint_x: .22
                Button:
                    text: "Paused Time"
                    size_hint_x: .22

            ScrollView:
                id: detail_scroll_view
                size_hint_y: .8

                RecordDetailGridView:
                    id: detail_grid_view
                    cols: 1
                    spacing: 2
                    size_hint_y: None
                    Button:
                        text: "test"
                        size_hint_y: None
                        height: 60
                    BoxLayout:
                        size_hint_y: None
                        height: 60
                        orientation: "horizontal"
                        Button:
                            text: "test1"
                        Button:
                            text: "test2"
                    BoxLayout:
                        size_hint_y: None
                        height: 60
                        orientation: "horizontal"
                        Button:
                            text: "test1"
                        Button:
                            text: "test2"

    BoxLayout:
        id: total_line
        orientation: "horizontal"
        size_hint_y: .15
        Label:
            text: "Total"
            size_hint_x: .2

        Button:
            text: "Totals Placeholder"
            size_hint_x: .8


