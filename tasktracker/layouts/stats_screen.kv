<StatsScreen>:

<StandardStatsScreen>:
    BoxLayout:
        orientation: 'vertical'
        TaskProjectStatsSummaryView:
            size_hint_y: .45
        TimelineContainer:
            size_hint_y: .55


<TaskProjectStatsSummaryView>:
    orientation: 'vertical'

    # TODO: Replace scaffold with themed widgets.

    BoxLayout:
        id: summary_labels
        orientation: "horizontal"
        size_hint_y: .85
        BoxLayout:
            id: task_project_switcher
            size_hint_x: .2
            orientation: "vertical"
            Label:
                id: view_label
                text: "Summary"
                size_hint_y: .2
            Button:
                text: "Time by Project"
                size_hint_y: .2
            Button:
                text: "Time by Task"
                size_hint_y: .2
            Button:
                text: "% By Project"
                size_hint_y: .2
            Button:
                text:  "% By Task"
                size_hint_y: .2

        BoxLayout:
            id: detail_container
            orientation: 'vertical'
            size_hint_x: .8
            BoxLayout:
                id: detail_header
                orientation: "horizontal"
                size_hint_y: .2
                Button:
                    text: "Task/Project"
                Button:
                    text: "Working Time"
                Button:
                    text: "Break Time"

            Button:
                text: "Details"
                size_hint_y: .8


    BoxLayout:
        id: total_line
        orientation: "horizontal"
        size_hint_y: .15
        Label:
            text: "Total"
            size_hint_x: .2

        Button:
            text: "Totals Placeholder"
            size_hint_x: .8



<TimelineContainer>:
    id: timeline_display
    orientation: "vertical"
    label_start: label_time_start
    label_end: label_time_end
    timeline_zoom_slider: zoom_slider

    BoxLayout:
        id: time_controls
        orientation: 'horizontal'
        size_hint_y: None
        height: 50

        DateTimeLabel:
            id: label_time_start
            name: "label_time_start"
            display_time: timeline_display.display_time_start
            time_line_container: timeline_display

        TimelineSlider:
            id: zoom_slider
            time_line_container: timeline_display

        DateTimeLabel:
            id: label_time_end
            name: "label_time_end"
            display_time: timeline_display.display_time_end
            time_line_container: timeline_display

<DateTimeLabel>:
    size_hint: None, 1
    height: 50
    markup: True




