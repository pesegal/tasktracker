<Task>:
    size_hint_y: None
    height: 60

    background_color: self.task_color
    background_normal: self.task_texture
    background_down: self.task_texture
    border: [2, 2, 2, 2]

    canvas.before:
        Color:
            rgba: root.current_shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3

    canvas:
        Color:
            rgba: root.current_project_shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [3,3,3,3]
            pos: self.x + 1, self.y - 1
            size: self.width*.07 - 4, self.height + 2
        Color:
            rgba: root.current_project_color
        BorderImage:
            source: root.project_indicator
            border: [2,2,2,2]
            pos: self.x - 1, self.y
            size: self.width*.07 - 4, self.height