<TimerScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: root.task_height
            padding: 20, 10
            spacing: 4
            orientation: 'horizontal'
            TimerSettingsButton:
                state: 'down'
                text: "Pomo"
                on_press: root.switch_timer_type(0)
            TimerSettingsButton:
                text: "Short Break"
                on_press: root.switch_timer_type(1)
            TimerSettingsButton:
                text: "Long Break"
                on_press: root.switch_timer_type(2)
            TimerSettingsButton:
                text: "Stopwatch"
                on_press: root.switch_timer_type(3)

        TimerTaskDisplayManager:
            id: task_manager
            size_hint_y: None
            size_hint_x: .5
            pos_hint: {'center_x': .5, 'top': .5}
            height: root.task_height

        Label:
            id: timer
            font_size: self.width / 4
            color: root.text_color
            text: '[b]00[/b]:00'
            markup: True

        BoxLayout:
            size_hint_y: None
            height: root.task_height
            padding: 20, 10
            spacing: 4
            orientation: "horizontal"
            TimerButton:
                id: start_pause_button
                text: "Start"
                on_press: root.start_pause_trigger()
            TimerButton:
                text: "Reset"
                on_press: root.timer_reset()

<TimerButton>:
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3

<TimerSettingsButton>:
    group: 'timer_type'
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3

<NoProjectSelectedButton>:
    text: 'Select a project!'
    border: [2, 2, 2, 2]
    color: self.text_color
    background_color: self.button_color
    background_normal: self.button_texture
    background_down: self.button_texture
    canvas.before:
        Color:
            rgba: root.shadow_color
        BorderImage:
            source: root.shadow_texture
            border: [1, 1, 1, 1]
            pos: self.x - 3, self.y - 3
            size: self.width + 3 , self.height + 3



