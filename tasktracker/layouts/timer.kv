<TimerScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 80
            padding: 20, 10
            orientation: 'horizontal'
            TimerSettingsButton:
                state: 'down'
                text: "Pomo"
                on_press: root.switch_timer_type(0)
            TimerSettingsButton:
                text: "Short Break"
                on_press: root.switch_timer_type(1)
            TimerSettingsButton:
                text: "Long Break"
                on_press: root.switch_timer_type(2)
            TimerSettingsButton:
                text: "Stopwatch"
                on_press: root.switch_timer_type(3)

        TimerTaskDisplayManager:
            id: task_manager
            size_hint_y: None
            size_hint_x: .5
            pos_hint: {'center_x': .5, 'top': .5}
            height: 60

        Label:
            id: timer
            font_size: self.width / 4
            color: root.text_color
            text: '[b]00[/b]:00'
            markup: True

        BoxLayout:
            size_hint_y: None
            height: 80
            padding: 20, 10
            orientation: "horizontal"
            Button:
                id: start_pause_button
                text: "Start"
                on_press: root.start_pause_trigger()
            Button:
                text: "Reset"
                on_press: root.timer_reset()

<TimerSettingsButton>:
    group: 'timer_type'

<NoProjectSelectedButton>:
    text: 'Select a project!'
    border: [2, 2, 2, 2]
    background_normal: self.background



