<TimerScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: None
            height: 80
            padding: 20, 10
            orientation: 'horizontal'
            TimerSettingsButton:
                state: 'down'
                text: "Pomo"
                on_press: root.timer_type_selection = 0
            TimerSettingsButton:
                text: "Short Break"
                on_press: root.timer_type_selection = 1
            TimerSettingsButton:
                text: "Long Break"
                on_press: root.timer_type_selection = 2
            TimerSettingsButton:
                text: "Stopwatch"
                on_press: root.timer_type_selection = 3

        Button:
            text: "Selected Task"
            size_hint_y: None
            size_hint_x: .5
            pos_hint: {'center_x': .5, 'top': .5}
            height: 60

        Label:
            id: timer
            font_size: 120
            text: '[b]00[/b]:00'
            markup: True

        BoxLayout:
            size_hint_y: None
            height: 80
            padding: 20, 10
            orientation: "horizontal"
            Button:
                text: "Start"
                on_press: root.on_start()
            Button:
                text: "Reset"

<TimerSettingsButton>:
    group: 'timer_type'